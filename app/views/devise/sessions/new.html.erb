<section class="pagecontainer">
  <h2>Sign in</h2>
  <%= simple_form_for resource, url: session_path(resource_name), as: resource_name, html: {class: 'form-horizontal'},wrapper: :horizontal_form do |f| %>
    <%= f.input :email, autofocus: true, placeholder: "Email Address" %>
    <%= f.input :password, autocomplete: "off", placeholder: "Password" %>
    <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> Remember me
        </label>
      </div>
    </div>
  </div>      
    <% end -%>
    <%= f.submit "Sign in", class: "button" %>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
